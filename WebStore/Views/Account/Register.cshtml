@model RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация нового пользователя";
}
@section Styles {
    <partial name="Partial/_Index_Styles" />
}
@section Scripts {
    <partial name="Partial/_Index_Scripts" />
}
<div class="single_post">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h2>Приветствую!</h2>
                <form asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="UserName" placeholder="Имя пользовтеля" />
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

                    <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                </form>
            </div>
        </div>
    </div>
</div>